<div class="profile-container">
    <img class="avatar-large" src="<%= cl_image_path current_user.photo.key, height: 300, crop: :fill if current_user.photo.attached? %>">
    <p class="profile-info">
      <strong>Email address:</strong> <%= @current_user.email %> <br>
      <strong>Username:</strong> <%= @current_user.username %> <br>
      <strong>Your description:</strong> <%= @current_user.description %>
    </p>
</div>

<% if @mules %>
    <% @mules.each do %>
    <% end %>
<% end %>

<div class="container mt-5">
        <%= simple_form_for @mule do |f| %>
      <div class="row">
         <div class="col-4">
            <%= f.input :transportation_means %>
        </div>
        <div class="col-4">
            <%= f.input :location  %>
        </div>
         <div class="col-2">
            <%= f.input :rate_per_km_per_kg, :label => "Price/Km/Kg" %>
        </div>

        <div class="col-2">
            <%= f.button :submit, class: "btn-login", style: "width:100%; margin-top:1.8rem;"%>
        </div>
        <% end %>

    </div>
</div>


<div class="container mt-5">
    <% if @offers %>
        <% @offers.each do |offer|%>
        <div class="card mt-2">
            <div class="card-body row">
              <% if offer.status == "pending" &&  current_user.mules.include?(offer.mule) %>
              <div class="d-flex justify-content-around">
                <%= link_to '👍', accepted_offer_path(offer), method: :patch, class: 'm-1' %>
                <%= link_to '🗑️', refused_offer_path(offer), method: :patch, class: 'm-1' %>
              </div>

              <% end %>
                <h1 class="offer-info col-6">
                  <%= offer.starting_point.upcase %>  -   <%= offer.destination.upcase %>
                </h1>
            <div>
              Price: <%= offer.commission %>  $, <br>
              Distance: <%= offer.distance %> km</div>
            <div class="offer-status <%=offer.status%>"><%= offer.status %></div>
            </div>
          </div>
        <% end %>
    <% end %>
</div>
